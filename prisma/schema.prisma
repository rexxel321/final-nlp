// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Role system: First user = ADMIN, others = USER
enum UserRole {
  USER
  ADMIN
}

enum UserStatus {
  ONLINE
  DND
  IDLE
  INVISIBLE
  OFFLINE
}

model User {
  id              String     @id @default(uuid())
  email           String     @unique
  username          String?    @unique  // Optional unique username
  password          String
  name              String?     // Display name (can have spaces)
  role              UserRole    @default(USER)
  status            UserStatus  @default(ONLINE)
  
  // Profile customization
  displayName       String?     // Rich display name with emojis
  bio               String?     @db.Text
  pronouns          String?
  avatar            String?     @db.LongText // Profile picture URL (Base64)
  banner            String?     @db.LongText // Banner image URL (Base64)
  
  // Status system (Discord-like)
  statusEmoji       String?     // Emoji for custom status
  statusText        String?     // Custom status message
  statusExpiresAt   DateTime?   // When status expires (null = never)
  
  // Chat background
  backgroundImage   String?     @db.LongText // URL to chat background (Base64)
  backgroundOpacity Float       @default(0.3) // Opacity (0-1)
  sidebarOpacity    Float       @default(1.0) // Sidebar transparency (0.3-1)
  
  // Relations
  sessions          Session[]
  modelSettings     ModelSettings[]
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  
  @@index([email])
  @@index([username])
}

model Session {
  id        String    @id @default(uuid())
  title     String    @default("New Chat")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]
  userId    String?
  user      User?     @relation(fields: [userId], references: [id], onDelete: Cascade)  // CASCADE DELETE
  
  @@index([userId])
}

model Message {
  id        String   @id @default(uuid())
  role      String   // 'user' | 'assistant'
  content   String   @db.Text
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  model     String?
  versions  Json?    // Store edit history [{role, content, model, createdAt}]
  
  // Performance metrics (persisted)
  latencyMs         Int?      // Response latency in milliseconds
  tokensPerSec      Float?    // Tokens generated per second
  totalTokens       Int?      // Total tokens used
  promptTokens      Int?      // Prompt tokens
  completionTokens  Int?      // Completion tokens generated
  f1Score           Float?    // F1 score for the response
  
  @@index([sessionId])
}


model ModelSettings {
  id           String   @id @default(uuid())
  modelId      String   
  userId       String   // User-specific settings
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  systemPrompt String?  @db.Text
  useRAG       Boolean  @default(true)
  temperature  Float    @default(0.7)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@unique([modelId, userId]) // One setting per model per user
  @@index([userId])
}
